{
  "name": "fortes-certezas-api",
  "version": "1.0.0",
  "description": "API para gestão de conteúdo do site Fortes Certezas",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "dev": "tsx watch --clear-screen=false src/index.ts",
    "dev:worker": "wrangler dev",
    "migrate-to-supabase": "node scripts/migrate-to-supabase.js",
    "build": "tsc",
    "start": "node dist/index.js",
    "deploy": "npm run build && wrangler deploy",
    "type-check": "tsc --noEmit"
  },
  "keywords": [
    "api",
    "hono",
    "cms"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@hono/node-server": "^1.19.7",
    "@hono/swagger-ui": "^0.5.3",
    "@supabase/supabase-js": "^2.89.0",
    "bcrypt": "^5.1.1",
    "dotenv": "^17.2.3",
    "hono": "^4.0.0",
    "jsonwebtoken": "^9.0.2",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20241121.0",
    "@types/bcrypt": "^5.0.2",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/node": "^20.10.0",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3",
    "wrangler": "^3.101.0"
  }
}
